<header class="mb-4">
  <div class="navbar navbar-expand-sm navbar-dark bg-danger">
    <div class="container-fluid ps-3 pe-3">
      <div>
        <% if logged_in? %>
          <a href="/restaurants"><img src="/logo.png" alt="log.png" class="logo navbar-brand"></a>
        <% else %>
          <a href="/"><img src="/logo.png" alt="logo.png" class="logo navbar-brand"></a>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <% if logged_in? %>
          <div class="btn-group">
            <ul class="navbar-nav">
              <li class="ms-3"><%= link_to 'レストラン', restaurants_path, class: 'nav-link text-white' %></li>
            </ul>
            <button type="button" class="btn dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false"><%= current_user.name %></button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li class="dropdown-item"><%= link_to 'マイページ', user_path(current_user), class: 'nav-link' %></li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
            </ul>
          </div>
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to "ゲストログイン", guest_login_path, method: :post, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to '会員登録', signup_path, class: 'nav-link ms-3'%></li>
            <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link ms-3'%></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</header>