<% if current_user.liked_by?(restaurant) %>
  <%= form_with(model: current_user.likes.find_by(restaurant_id: restaurant.id), method: :delete) do |f| %>
    <%= hidden_field_tag :restaurant_id, restaurant.id %>
    <div class="d-flex">
      <div>
        <%= f.submit 'とりけし', class: 'btn btn-warning btn-sm' %>
      </div>
      <div class="ms-3 mt-1"><%= counts(restaurant) %></div>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: current_user.likes.build) do |f| %>
    <%= hidden_field_tag :restaurant_id, restaurant.id %>
    <div class="d-flex">
      <div>
        <%= f.submit 'いいね', class: 'btn btn-info btn-sm' %>
      </div>
      <div>
        <div class="ms-3 mt-1"><%= counts(restaurant) %></div>
      </div>
    </div>
  <% end %>
<% end %>