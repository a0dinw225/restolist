<div class="row mx-auto">
  <% restaurants.each do |restaurant| %>
    <div class="offset-sm-4 col-sm-6">
      <ul class="list-unstyled">
        <li class="mt-5"><%= link_to restaurant.name, restaurant_path(restaurant), class: 'text-decoration-none restaurant_name' %></li>
        <li class="mt-3">
          <%= link_to restaurant_path(restaurant) do%>
            <%= image_tag "/#{restaurant.photo}", size: '300x200', alt: "#{restaurant.photo}" %>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="offset-sm-6 col-sm-2">
      <%= render 'likes/like_button', restaurant: restaurant %>
    </div>
  <% end %>
  <div class="offset-sm-4 col-sm-5 mt-3">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>