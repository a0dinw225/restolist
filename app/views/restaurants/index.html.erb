<div class="text-center mb-auto">
  <h1>レストラン一覧</h1>
</div>

<div class="row">
  <div class="col-sm-4 offset-sm-3 mx-auto">
    <% @restaurants.each do |restaurant| %>
      <ul class="list-unstyled">
        <li class="mt-5"><%= link_to restaurant.name, restaurant_path(restaurant), class: 'text-decoration-none restaurant_name' %></li>
        <li class="mt-3"><img src="<%= "#{restaurant.photo}" %>", alt="<%= restaurant.photo %>", width="300", height="200" ></li>
      </ul>
    <% end %>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>